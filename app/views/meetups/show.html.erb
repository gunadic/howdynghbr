<div class="row">

  <div class ="large-6 columns">
    <div class="panel">
      <h3> Meet Deets </h3>
      <h3><%= @meetup.in_words %></h3>
      <h4><%= @meetup.description %></h4>
      <p>
        <%= "#{pluralize(@meetup.participations.count, 'neighbor')} are in. Are you?" %>
      </p>
      <p>
        <%= form_for [@meetup, @participation] do |f| %>
          <%= f.submit "I'm in!" %>
        <% end %>
      </p>
    </div>
  </div>
  <%= render 'participants' %>
  <div class="large-4 columns" id="detail_map">
    <%= gmaps({
        "map_options" => { "auto_zoom" => false, "zoom"=>17},
        "markers"     => { "data" => @json }
      })
    %>
  </div>
</div>