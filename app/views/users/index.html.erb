<div class="row">
  <table>
    <thead>
      <tr>
        <th>User Name</th>
        <th>Name</th>
        <th>Email</th>
        <th>Tag Line</th>
      </tr>
    </thead>


    <% if @users.first==nil%>
      <p>No users are registered.</p>
    <%else%>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.user_name %></td>
        <td><%= [user.first_name, user.last_name].join(" ") %> </td>
        <td><%= user.email %></td>
        <td><%= user.tag_line %></td>
      </tr>
      <% end %>s
    <% end %>

  </table>
</div>